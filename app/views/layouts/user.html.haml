!!!
%html
  %head
    %title Koerahoidja
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default{:role => "navigation"}
      .navbar-header
        =link_to t(:koerahoidja), nil, {class: 'navbar-brand uppercase letter-spacing '}
      %ul.nav.navbar-nav.navbar-collapse.navbar-right
        %li.navbar-text
          - if @current_user
            = @current_user.email
        - if @current_user
          %li.dropdown
            =link_to t(:settings), '#', {class: 'dropdown-toggle', data: {toggle: 'dropdown'}}

            %ul.dropdown-menu
              %li
                =link_to t('your-profile'), user_path(:id => @current_user.id)
              %li
                =link_to t('change-information'), edit_user_path(:id => @current_user.id)
              %li.divider
              %li
                =link_to t(:logout), :controller=> "sessions", :action=> "logout" 
        - else      
          %li
            =link_to t('add-profile'), new_user_path
          %li
            =link_to t('login'), login_path

    .container
      .row
        -if flash[:alert]
          .alert.alert-danger.alert-dismissable
            = flash[:alert]
        -if flash[:notice]
          .alert.alert-success.alert-dismissable
            = flash[:notice]

    = yield

    .row.center
      %hr
      SO COPYRIGHT WOW
      %hr