.row.center
  %h1.center
    = @user.name
  = @user.county
  , 
  = @user.parish
  ,
  = @user.town

.row.center
  - if @current_user
    = link_to 'Edit', edit_user_path(@user)


.container
  .row
    .col-md-3.col-md-offset-2
      %p
        %b Profile photo:
        = @user.profile_photo
      %p
        %b Email:
        = @user.email
      %p
        %b Phone:
        = @user.phone
      %p
        %b Availability:
        = @user.availability
    .col-md-6
      %p
        %b About:
        = @user.about
      %p
        %b Suitable dogs:
        = @user.suitable_dogs
      %p
        %b Home description:
        = @user.home_description
      %p
        %b Family:
        = @user.family
      %p
        %b Experience:
        = @user.experience




