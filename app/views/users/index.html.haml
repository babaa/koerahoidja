  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.email
      %td= user.password_digest
      %td= user.phone
      %td= user.profile_photo
      %td= user.availability
      %td= user.about
      %td= user.suitable_dogs
      %td= user.home_description
      %td= user.family
      %td= user.experience
      %td= user.county
      %td= user.parish
      %td= user.town
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user)
      %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

